<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme.Threema.NoActionBar" parent="AppBaseTheme">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>

		<item name="android:windowActivityTransitions">true</item>

		<item name="android:windowEnterTransition">@transition/slide_in</item>
		<item name="android:windowExitTransition">@transition/slide_out</item>

		<item name="android:windowSharedElementEnterTransition">
			@transition/conversation_activity_transition
		</item>
		<item name="android:windowSharedElementExitTransition">
			@transition/conversation_activity_transition
		</item>

		<item name="android:windowAllowEnterTransitionOverlap">true</item>
		<item name="android:windowAllowReturnTransitionOverlap">true</item>
	</style>

	<style name="Theme.Threema.NoActionBar.Dark" parent="AppBaseTheme.Dark">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>

		<item name="android:windowActivityTransitions">true</item>

		<item name="android:windowEnterTransition">@transition/slide_in</item>
		<item name="android:windowExitTransition">@transition/slide_out</item>

		<item name="android:windowSharedElementEnterTransition">
			@transition/conversation_activity_transition
		</item>
		<item name="android:windowSharedElementExitTransition">
			@transition/conversation_activity_transition
		</item>

		<item name="android:windowAllowEnterTransitionOverlap">true</item>
		<item name="android:windowAllowReturnTransitionOverlap">true</item>
	</style>
</resources>
