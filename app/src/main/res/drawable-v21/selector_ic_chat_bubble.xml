<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item
		android:id="@+id/selected"
		android:drawable="@drawable/ic_chat_bubble_filled"
		android:state_checked="true"/>

	<item
		android:id="@+id/unselected"
		android:drawable="@drawable/ic_chat_bubble_outline"
		android:state_checked="false"/>

	<transition
		android:fromId="@id/selected"
		android:toId="@id/unselected"
		android:reversible="false"
		android:drawable="@drawable/ic_chat_bubble_filled_to_outline"/>

	<transition
		android:fromId="@id/unselected"
		android:toId="@id/selected"
		android:reversible="false"
		android:drawable="@drawable/ic_chat_bubble_outline_to_filled"/>
</animated-selector>
